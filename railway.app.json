{
  "name": "redfox-api",
  "description": "RedFox API - Sistema de gesti√≥n de inventario",
  "services": [
    {
      "name": "redfox-api",
      "type": "application",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
      },
      "deploy": {
        "startCommand": "/usr/local/bin/docker-entrypoint.sh",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "APP_DB_PROVIDER": "postgres",
        "JWT_SECRET": "your-super-secret-jwt-key-change-this-in-production",
        "JWT_EXPIRES_IN": "24h"
      }
    },
    {
      "name": "redfox-db",
      "type": "postgresql",
      "env": {
        "POSTGRES_DB": "redfox",
        "POSTGRES_USER": "redfox_user",
        "POSTGRES_PASSWORD": "redfox_password"
      }
    }
  ],
  "variables": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "APP_DB_PROVIDER": "postgres",
    "JWT_SECRET": "your-super-secret-jwt-key-change-this-in-production",
    "JWT_EXPIRES_IN": "24h"
  }
} 